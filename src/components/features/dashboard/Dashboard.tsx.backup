function PeerInsightsCard({ job }: { job: string }) {
                const [insight, setInsight] = useState<string>("");
                const [sourceUrl, setSourceUrl] = useState<string>("");
                const [loading, setLoading] = useState(true);
                const [error, setError] = useState(false);

                useEffect(() => {
                    const fetchInsight = async () => {
                        // Check cache first (2-hour expiry)
                        const cacheKey = `peer_insight_${job}`;
                        const cached = localStorage.getItem(cacheKey);

                        if (cached) {
                            try {
                                const { insight: cachedInsight, sourceUrl: cachedUrl, timestamp } = JSON.parse(cached);
                                const twoHoursInMs = 2 * 60 * 60 * 1000;

                                if (Date.now() - timestamp < twoHoursInMs) {
                                    setInsight(cachedInsight);
                                    setSourceUrl(cachedUrl);
                                    setLoading(false);
                                    return;
                                }
                            } catch (e) {
                                // Invalid cache, continue to fetch
                            }
                        }

                        // Fetch new insight
                        try {
                            const now = new Date();
                            const hour = now.getHours();
                            let timeContext = "morning";

                            if (hour >= 12 && hour < 18) timeContext = "afternoon";
                            else if (hour >= 18) timeContext = "evening";

                            const response = await fetch("/api/peer-insights", {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({
                                    job,
                                    level: "intermediate",
                                    timeContext,
                                    hour
                                })
                            });

                            if (!response.ok) throw new Error("Failed to fetch insight");

                            const data = await response.json();
                            setInsight(data.insight);
                            setSourceUrl(data.sourceUrl);

                            // Cache the result
                            localStorage.setItem(cacheKey, JSON.stringify({
                                insight: data.insight,
                                sourceUrl: data.sourceUrl,
                                timestamp: Date.now()
                            }));

                            setLoading(false);
                        } catch (err) {
                            console.error("Error fetching peer insight:", err);
                            setError(true);
                            setLoading(false);
                            // Fallback insight
                            setInsight(`성공하는 ${job}들은 지금 <span class='text-primary'>온라인 커뮤니티</span>에서 최신 트렌드를 탐색하고 있습니다.`);
                        }
                    };

                    fetchInsight();
                }, [job]);

                if (loading) {
                    return (
                        <div className="bg-gradient-to-br from-purple-500/10 to-transparent rounded-lg p-8 border border-purple-500/20 flex items-center gap-6 animate-pulse h-full">
                            <div className="w-16 h-16 rounded-full bg-purple-500/10" />
                            <div className="flex-1 space-y-3">
                                <div className="h-5 bg-white/5 rounded w-1/3" />
                                <div className="h-4 bg-white/5 rounded w-full" />
                                <div className="h-4 bg-white/5 rounded w-4/5" />
                            </div>
                        </div>
                    );
                }

                return (
                    <div className="bg-gradient-to-br from-purple-500/10 to-transparent rounded-lg p-8 border border-purple-500/20 flex items-center gap-6 h-full">
                        <div className="w-16 h-16 rounded-full bg-purple-500/10 flex items-center justify-center shrink-0">
                            <Users className="w-8 h-8 text-purple-400" />
                        </div>
                        <div className="flex-1">
                            <h4 className="font-semibold mb-2 text-base">동료들의 인사이트</h4>
                            <p
                                className="text-muted-foreground text-sm leading-relaxed"
                                dangerouslySetInnerHTML={{ __html: insight }}
                            />
                        </div>
                        {sourceUrl && (
                            <Button
                                variant="outline"
                                size="sm"
                                className="rounded-full border-purple-500/30 hover:bg-purple-500/10 hover:text-purple-400 text-xs h-9 px-5 shrink-0"
                                onClick={() => window.open(sourceUrl, '_blank')}
                            >
                                더 보기
                            </Button>
                        )}
                    </div>
                );
            }

