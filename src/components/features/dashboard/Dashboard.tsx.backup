function DailyRhythmTimeline({ schedule, customGoals, dailyGoals, toggleCustomGoal }: {
            schedule?: UserProfile['schedule'];
            customGoals?: UserProfile['customGoals'];
            dailyGoals: DailyGoals;
            toggleCustomGoal: (id: string) => void;
        }) {
                if (!schedule) return (
                    <div className="text-center text-muted-foreground py-10 flex flex-col items-center gap-4">
                        <p>일정을 설정하고 나만의 리듬을 찾아보세요.</p>
                        <Button size="sm" onClick={() => document.querySelector<HTMLButtonElement>('button[aria-label="일정 추가/변경"]')?.click()}>일정 설정하기</Button>
                    </div>
                );

                const now = new Date();
                const currentHour = now.getHours();
                const currentMinute = now.getMinutes();
                const currentTimeValue = currentHour * 60 + currentMinute;

                const timeToValue = (time: string) => {
                    const [h, m] = time.split(':').map(Number);
                    return h * 60 + m;
                };

                const wakeUpVal = timeToValue(schedule.wakeUp);
                const workStartVal = timeToValue(schedule.workStart);
                const workEndVal = timeToValue(schedule.workEnd);
                const sleepVal = timeToValue(schedule.sleep);

                const timelineItems = [
                    { time: schedule.wakeUp, label: "기상", icon: Sun, type: "wakeUp", value: wakeUpVal },
                    { time: schedule.workStart, label: "업무 시작", icon: Briefcase, type: "workStart", value: workStartVal },
                    { time: "12:00", label: "점심", icon: Coffee, type: "lunch", value: 12 * 60 },
                    { time: schedule.workEnd, label: "업무 종료", icon: LogOut, type: "workEnd", value: workEndVal },
                    { time: schedule.sleep, label: "취침", icon: Moon, type: "sleep", value: sleepVal },
                ].sort((a, b) => a.value - b.value);

                // Find current active segment
                let activeIndex = -1;
                for (let i = 0; i < timelineItems.length; i++) {
                    if (currentTimeValue >= timelineItems[i].value) {
                        activeIndex = i;
                    }
                }

                return (
                    <div className="relative pl-4 border-l-2 border-white/10 space-y-8 py-2">
                        {timelineItems.map((item, index) => {
                            const isActive = index === activeIndex;
                            const isPast = index < activeIndex;
                            const Icon = item.icon;

                            // Filter goals for this time period
                            const periodGoals = customGoals?.filter(g => {
                                if (item.type === "wakeUp") return g.time === "morning";
                                if (item.type === "lunch") return g.time === "afternoon";
                                if (item.type === "workEnd") return g.time === "evening";
                                return false;
                            });

                            return (
                                <div key={index} className={cn("relative pl-8 transition-all", isActive ? "opacity-100" : "opacity-60")}>
                                    {/* Dot on timeline */}
                                    <div className={cn(
                                        "absolute -left-[21px] top-1 w-3 h-3 rounded-full border-2 transition-colors z-10",
                                        isActive ? "bg-primary border-primary shadow-[0_0_10px_rgba(var(--primary),0.5)] scale-125" :
                                            isPast ? "bg-primary/50 border-primary/50" : "bg-background border-white/20"
                                    )} />

                                    {/* Connector Line Highlight */}
                                    {isActive && (
                                        <div className="absolute -left-[18px] top-4 bottom-[-32px] w-0.5 bg-gradient-to-b from-primary to-transparent" />
                                    )}

                                    <div className="flex items-center gap-3 mb-2">
                                        <span className="text-sm font-mono text-muted-foreground min-w-[45px]">{item.time}</span>
                                        <div className={cn("p-1.5 rounded-lg", isActive ? "bg-primary/20 text-primary" : "bg-white/5 text-muted-foreground")}>
                                            <Icon className="w-4 h-4" />
                                        </div>
                                        <span className={cn("font-medium text-sm", isActive && "text-primary")}>{item.label}</span>
                                    </div>

                                    {/* Show goals if active or relevant */}
                                    {(isActive || periodGoals?.length) && (
                                        <div className="space-y-2 mt-3 ml-[60px]">
                                            {periodGoals?.map(goal => (
                                                <motion.div
                                                    key={goal.id}
                                                    initial={{ opacity: 0, x: -10 }}
                                                    animate={{ opacity: 1, x: 0 }}
                                                    className="flex items-center gap-3 bg-white/5 p-3 rounded-lg cursor-pointer hover:bg-white/10 border border-white/5"
                                                    onClick={() => toggleCustomGoal(goal.id)}
                                                >
                                                    {dailyGoals.customGoals?.[goal.id] ? (
                                                        <CheckCircle2 className="w-4 h-4 text-green-500 shrink-0" />
                                                    ) : (
                                                        <Circle className="w-4 h-4 text-muted-foreground shrink-0" />
                                                    )}
                                                    <span className={cn("text-sm", dailyGoals.customGoals?.[goal.id] && "line-through text-muted-foreground")}>
                                                        {goal.text}
                                                    </span>
                                                </motion.div>
                                            ))}
                                        </div>
                                    )}
                                </div>
                            );
                        })}
                    </div>
                );
            }

